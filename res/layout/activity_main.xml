<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
     android:paddingTop="@dimen/activity_vertical_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
       android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="fill_parent"
         android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/Massan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout2" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_below="@+id/Massan">
        <TextView
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="25.0sp"
            android:id="@+id/MaintextView_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zankin" />
        <TextView
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="25.0sp"
            android:id="@+id/MaintextView_2_zankin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="            " />
        <TextView
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="25.0sp"
            android:id="@+id/MaintextView_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/en" />
    </LinearLayout>
    <LinearLayout
         android:orientation="vertical"
         android:id="@+id/linearLayout1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="97.0dip"
         android:layout_below="@+id/linearLayout2"
         android:layout_centerHorizontal="true">
        <ImageButton
            android:layout_gravity="center_horizontal"
            android:id="@+id/MainImageButton_I"
            android:background="#00000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_gravity="center_horizontal"
             android:id="@+id/MainImageButton_M"
             android:background="#00000000"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
        <ImageButton
            android:layout_gravity="center_horizontal"
            android:id="@+id/MainImageButton_T"
             android:background="#00000000"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>